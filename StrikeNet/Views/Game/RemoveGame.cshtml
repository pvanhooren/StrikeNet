@model StrikeNet.BusinessLogic.Dtos.GameDto

@{
    ViewData["Title"] = "Verwijder wedstrijd";
}

    <h1 class="banner">@ViewData["Title"]</h1>
    <form asp-action="RemoveGame">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Team1">Team 1</label>
            <input disabled class="form-control" asp-for="Team1">
        </div>
        <div class="form-group">
            <label asp-for="Team2">Team 2</label>
            <input disabled class="form-control" asp-for="Team2">
        </div>
        <div class="form-group">
            <label asp-for="Date">Datum en tijd</label>
            <input disabled class="form-control" asp-for="Date">
        </div>
        <div class="form-group">
            <label asp-for="Result">Uitslag</label>
            <input disabled class="form-control" asp-for="Result">
        </div>

        <button type="submit" class="btn btn-primary" style="background-color:red">Verwijder</button>
    </form>
