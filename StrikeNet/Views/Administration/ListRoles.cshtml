@using StrikeNet.BusinessLogic.Dtos;
@model IEnumerable<RoleDto>

@{
    ViewBag.Title = "Rollen Admin";
}

    <div style="height:50px">
        <h1 class="text-left" style="display:inline-block">Rollen Admin</h1>
        <a asp-controller="Administration" asp-action="CreateRole" class="btn btn-warning float-right" style="margin-top:5px; margin-bottom:5px; margin-right:5px">Nieuwe rol</a>
    </div>

@if (Model.Any())
{
    

    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header banner">
                Role Id: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id">Edit</a>
                <a class="btn btn-danger" asp-action="RemoveRole" asp-controller="Administration" asp-route-id="@role.Id">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header banner">
            Het is hier erg stil...
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Maak een rol aan met de knop hieronder!
            </h5>
            <a asp-controller="Administration" asp-action="CreateRole" class="btn btn-primary" style="width:auto">Create Role</a>
        </div>
    </div>
}